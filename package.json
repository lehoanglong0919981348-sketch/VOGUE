{
  "name": "v-fashion",
  "version": "1.0.0",
  "description": "An application to generate professional visual scripts for Fashion Videos by transforming ideas and reference images into detailed prompts for AI video models.",
  "main": "main.js",
  "homepage": "./",
  "repository": {
    "type": "git",
    "url": "https://github.com/YOUR_GITHUB_USERNAME/YOUR_REPO_NAME.git"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "start": "npm run build && electron .",
    "dist": "npm run build && electron-builder"
  },
  "author": "V-Fashion Team",
  "license": "UNLICENSED",
  "dependencies": {
    "@google/genai": "^1.28.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "crypto-js": "^4.2.0",
    "xlsx": "^0.18.5",
    "electron-updater": "^6.1.8",
    "electron-log": "^5.1.5"
  },
  "devDependencies": {
    "@types/crypto-js": "^4.2.2",
    "@types/react": "^18.2.64",
    "@types/react-dom": "^18.2.21",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.18",
    "electron": "^29.1.0",
    "electron-builder": "^24.13.3",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.2.2",
    "vite": "^5.1.4"
  },
  "build": {
    "appId": "com.vfashion.app",
    "productName": "V-Fashion",
    "publish": [
      {
        "provider": "github",
        "owner": "YOUR_GITHUB_USERNAME",
        "repo": "YOUR_REPO_NAME"
      }
    ],
    "files": [
      "dist/**/*",
      "main.js",
      "package.json",
      "metadata.json"
    ],
    "directories": {
      "output": "release"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true
    }
  }
}